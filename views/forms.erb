
<% @forms.each_with_index do |form, index| %>
  <ul>
    <li>
      <a href="/forms/<%= index %>" method="get"><%= form[:document_name] %></a>
      <a href="forms/<%= index %>/edit" method="get">Edit</a>
      <form action="forms/<%= index %>/delete" method="post" >
        <button type="submit">Delete</button>
      </form>
    </li>
  </ul>
<% end %>


<form action="/forms/create" method="get" #class="create">
    <button type="submit">Create A New Document</button>
</form>